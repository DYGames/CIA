<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/signup_headText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 가입"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/signup_name_editText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_headText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Full Name" />

        <EditText
            android:id="@+id/signup_id_editText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_name_editText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="ID" />

        <EditText
            android:id="@+id/signup_pw_editText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_id_editText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="PassWord" />

        <EditText
            android:id="@+id/signup_pw_check_editText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_editText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="PassWord Check" />

        <Button
            android:id="@+id/signup_button"
            app:layout_constraintRight_toRightOf="@id/signup_pw_check_editText"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_check_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>